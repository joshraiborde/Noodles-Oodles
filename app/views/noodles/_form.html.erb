<%= render partial: 'errors', locals: {object: @noodle}  %>
<% form_for(@noodle) do |f|%>
  <div>
    <%= f.label :flavor %>
    <%= f.text_field :flavor %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <br>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <br>

  <p> Select a Brand that already exists: </p>
  <div>
    <%= f.collection_select :brand_id, Brand.all, :id, :name, include_blank: 'Select One'%>

  </div>

  <p> Or create a new Brand: </p>
  <div>
    <%=f.fields_for :brand do |b| %>
      <%= b.label :name %>
      <%= b.text_field :name %>
    <% end %>
  </div>
  <br>
  <%= f.submit %>
<% end %>