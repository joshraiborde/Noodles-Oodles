<h1>Sign Up!</h1>

<%= render partial: 'layouts/errors', locals: {object: @user}  %> <%# renders errors from the app/views/layouts/_errors.html.erb file%>

<%= form_for(@user) do |f|%>
    <%= f.label :username %>
    <%= f.text_field :username%>

    <%= f.label :password %>
    <%= f.password_field :password%>

    <%= f.submit "Sign Up"%>
<% end %>