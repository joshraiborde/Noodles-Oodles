<%=  display_header(@review)%> <!-- in the app/helpers/reviews_helper.rb fle -->

<%= render partial: 'layouts/errors', locals: {object: @review}  %> <%# renders errors from the layout view%>


<%=form_for(@review) do |f| %>
    <% if params[:noodle_id] %>
        <%= f.hidden_field :noodle_id %>
    <% else %>
        <div>
            <%= f.label :noodle_id, "Select a Noodle" %>
            <%= f.collection_select :noodle_id, Noodle.alpha, :id, :flavor_and_brand, include_blank: true %>
        </div>
    <% end %>
<div>
    <%= f.label :stars %>
    <%= f.number_field :stars, min:0, max:5 %>
</div>
<br>
<div>
    <%= f.label :title %>
    <%= f.text_field :title%>
</div>
<br>
<div>
    <%= f.label :content %>
    <%= f.text_area :content, size: "25x10" %>
</div>
<br>
<%= f.hidden_field :noodle_id%>

<%= f.submit %>

<% end %>

